{
  "name": "nativescript/plugin-tools",
  "version": "0.1",
  "extends": [],
  "schematics": {
    "add-package": {
      "factory": "./src/schematics/add-package",
      "schema": "./src/schematics/add-package/schema.json",
      "description": "Add a new package to the workspace."
    },
    "add-angular": {
      "factory": "./src/schematics/add-angular",
      "schema": "./src/schematics/add-angular/schema.json",
      "description": "Add Angular compatibility to a package."
    },
    "focus-packages": {
      "factory": "./src/schematics/focus-packages",
      "schema": "./src/schematics/focus-packages/schema.json",
      "description": "Focus workspace and demo's to particular packages."
    },
    "sync-packages-with-demos": {
      "factory": "./src/schematics/sync-packages-with-demos",
      "schema": "./src/schematics/sync-packages-with-demos/schema.json",
      "description": "If a developer manually adds a package without using -npm run add- you can try to sync packages with demo apps."
    },
    "config": {
      "factory": "./src/schematics/config",
      "schema": "./src/schematics/config/schema.json",
      "description": "Configure workspace scope."
    }
  }
}
